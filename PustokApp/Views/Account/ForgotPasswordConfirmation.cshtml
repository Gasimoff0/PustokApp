@{
	ViewData["Title"] = "?ifr? S?f?rlama T?l?bi Gönd?rildi";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-lg border-0">
				<div class="card-header bg-success text-white text-center">
					<h4><i class="fas fa-check-circle me-2"></i>Email Göndərildi</h4>
				</div>
				<div class="card-body text-center p-5">
					<div class="mb-4">
						<i class="fas fa-envelope-open-text fa-4x text-success mb-3"></i>
						<h5>@ViewBag.Message</h5>
					</div>

					<div class="alert alert-info" role="alert">
						<i class="fas fa-info-circle me-2"></i>
						<strong>Qeyd:</strong> Email gəlməzsə zəhmət olmasa spam qovluğunuzu da yoxlayın.
					</div>

					<div class="row text-center">
						<div class="col-md-6 mb-3">
							<div class="card bg-light">
								<div class="card-body">
									<i class="fas fa-clock fa-2x text-warning mb-2"></i>
									<h6>Link Müddəti</h6>
									<p class="small text-muted mb-0">Şifrə sıfırlama linki 1 saat müddətində etibarlıdır</p>
								</div>
							</div>
						</div>
						<div class="col-md-6 mb-3">
							<div class="card bg-light">
								<div class="card-body">
									<i class="fas fa-shield-alt fa-2x text-primary mb-2"></i>
									<h6>Təhlükəsizlik</h6>
									<p class="small text-muted mb-0">Link yalnız bir dəfə istifadə oluna bilər</p>
								</div>
							</div>
						</div>
					</div>

					<hr class="my-4">
					
					<div class="text-center">
						<a asp-action="Login" class="btn btn-primary btn-lg me-3">
							<i class="fas fa-sign-in-alt me-2"></i>Daxil Ol
						</a>
						<a asp-action="ForgotPassword" class="btn btn-outline-secondary btn-lg">
							<i class="fas fa-redo me-2"></i>Yenidən Göndər
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>