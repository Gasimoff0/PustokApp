@model Slider
<!-- Content Row -->
<div class="row">
    <div class="col-lg-8">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h2 class="m-0 font-weight-bold text-danger">Delete Slider</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this slider? This action cannot be undone.
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="form-group mb-3">
                                <label class="form-label"><strong>Image:</strong></label>
                                <div>
                                    <img src="~/assets/image/bg-images/@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail" style="max-width: 100%;" />
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label"><strong>Title:</strong></label>
                            <p class="form-control-plaintext border p-2 bg-light">@Model.Title</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="form-group mb-3">
                                <label class="form-label"><strong>Description:</strong></label>
                                <p class="form-control-plaintext border p-2 bg-light">@Model.Description</p>
                            </div>
                        }

                        <div class="form-group mb-3">
                            <label class="form-label"><strong>Button Text:</strong></label>
                            <p class="form-control-plaintext border p-2 bg-light">@Model.ButtonText</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ButtonLink))
                        {
                            <div class="form-group mb-3">
                                <label class="form-label"><strong>Button Link:</strong></label>
                                <p class="form-control-plaintext border p-2 bg-light">@Model.ButtonLink</p>
                            </div>
                        }

                        <div class="form-group mb-3">
                            <label class="form-label"><strong>Order:</strong></label>
                            <p class="form-control-plaintext border p-2 bg-light">@Model.Order</p>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="button" class="btn btn-danger me-2" onclick="confirmDelete()">
                        <i class="fas fa-trash"></i> Delete Slider
                    </button>
                    <a asp-area="Manage" asp-controller="Slider" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>

                <!-- Hidden form for actual deletion -->
                <form id="deleteForm" method="post" style="display: none;">
                    <input type="hidden" name="id" value="@Model.Id" />
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the slider "<strong>@Model.Title</strong>"?</p>
                <p class="text-muted">This action cannot be undone and will also delete the associated image file.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button class="btn btn-danger" type="button" onclick="submitDelete()">
                    <i class="fas fa-trash"></i> Yes, Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            $('#deleteModal').modal('show');
        }

        function submitDelete() {
            document.getElementById('deleteForm').submit();
        }
    </script>
}