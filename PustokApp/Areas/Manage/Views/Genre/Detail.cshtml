@model Genre
<!-- Content Row -->
<div class="row">
    <div class="col-lg-8">
        <!-- Genre Details Card -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h2 class="m-0 font-weight-bold text-primary">Genre Details</h2>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label class="form-label"><strong>Genre ID:</strong></label>
                    <p class="form-control-plaintext border p-2 bg-light">@Model.Id</p>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label"><strong>Genre Name:</strong></label>
                    <p class="form-control-plaintext border p-2 bg-light">@Model.Name</p>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label"><strong>Total Books:</strong></label>
                    <p class="form-control-plaintext border p-2 bg-light">
                        <span class="badge badge-primary">@(Model.Books?.Count ?? 0)</span> books in this genre
                    </p>
                </div>

                <div class="form-group">
                    <a asp-area="Manage" asp-controller="Genre" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-edit"></i> Edit Genre
                    </a>
                    <a asp-area="Manage" asp-controller="Genre" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Genre
                    </a>
                    <a asp-area="Manage" asp-controller="Genre" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Books in this Genre -->
    @if (Model.Books != null && Model.Books.Any())
    {
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h3 class="m-0 font-weight-bold text-success">Books in "@Model.Name" Genre</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Price</th>
                                    <th>In Stock</th>
                                    <th>Featured</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model.Books)
                                {
                                    <tr>
                                        <td>@book.Id</td>
                                        <td>
                                            <strong>@book.Title</strong>
                                            @if (book.IsNew)
                                            {
                                                <span class="badge badge-warning ml-1">New</span>
                                            }
                                        </td>
                                        <td>@book.Author?.Name</td>
                                        <td>
                                            @if (book.DiscountPercentage > 0)
                                            {
                                                <span class="text-success font-weight-bold">
                                                    $@((book.Price - (book.Price * book.DiscountPercentage) / 100).ToString("0.00"))
                                                </span>
                                                <small class="text-muted"><del>$@book.Price.ToString("0.00")</del></small>
                                                <span class="badge badge-danger">@book.DiscountPercentage.ToString("0.##")% OFF</span>
                                            }
                                            else
                                            {
                                                <span class="font-weight-bold">$@book.Price.ToString("0.00")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (book.InStock)
                                            {
                                                <span class="badge badge-success">In Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Out of Stock</span>
                                            }
                                        </td>
                                        <td>
                                            @if (book.IsFeatured)
                                            {
                                                <span class="badge badge-primary">Featured</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Regular</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-area="Manage" asp-controller="Book" asp-action="Detail" asp-route-id="@book.Id" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-area="Manage" asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning" title="Edit Book">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h3 class="m-0 font-weight-bold text-warning">Books in "@Model.Name" Genre</h3>
                </div>
                <div class="card-body text-center">
                    <div class="py-5">
                        <i class="fas fa-book fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No books found</h4>
                        <p class="text-muted">There are currently no books in this genre.</p>
                        <a asp-area="Manage" asp-controller="Book" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add First Book
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>