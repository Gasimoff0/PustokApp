@model Tag
<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h2 class="m-0 font-weight-bold text-danger">Delete Tag</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this tag?
                </div>
                
                <div class="form-group mb-3">
                    <label class="form-label"><strong>Tag Name:</strong></label>
                    <p class="form-control-plaintext border p-2 bg-light">
                        <span class="badge badge-secondary">@Model.Name</span>
                    </p>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label"><strong>Assigned Books:</strong></label>
                    <p class="form-control-plaintext border p-2 bg-light">
                        @if (Model.BookTags != null && Model.BookTags.Any())
                        {
                            <span class="badge badge-warning">@Model.BookTags.Count Books</span>
                            <div class="mt-2">
                                <small class="text-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    This tag is assigned to @Model.BookTags.Count book(s). Deleting it will remove the tag from all these books.
                                </small>
                            </div>
                        }
                        else
                        {
                            <span class="badge badge-light">No Books</span>
                        }
                    </p>
                </div>

                <div class="form-group mt-4">
                    <button type="button" class="btn btn-danger me-2" onclick="confirmDelete()">
                        <i class="fas fa-trash"></i> Delete Tag
                    </button>
                    <a asp-area="Manage" asp-controller="Tag" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>

                <!-- Hidden form for actual deletion -->
                <form id="deleteForm" method="post" style="display: none;">
                    <input type="hidden" name="id" value="@Model.Id" />
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the tag "<strong>@Model.Name</strong>"?</p>
                @if (Model.BookTags != null && Model.BookTags.Any())
                {
                    <p class="text-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> This will remove the tag from @Model.BookTags.Count book(s).
                    </p>
                }
                <p class="text-muted">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button class="btn btn-danger" type="button" onclick="submitDelete()">
                    <i class="fas fa-trash"></i> Yes, Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            $('#deleteModal').modal('show');
        }

        function submitDelete() {
            document.getElementById('deleteForm').submit();
        }
    </script>
}